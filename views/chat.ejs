<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <style type="text/css">
      .chat{
          width: 80%;
          margin: 0 auto;
          border: 1px solid #ccc;
          position: relative;
      }
      .top{
          margin-bottom: 20px;
      }
      .footer{
          position: absolute;
          bottom: -120px;
         margin: 0 auto;
          width: 80%;
          height: 100px;
      }
      #fasong{
          width: 80%;
          height: 100%;
      }
      .search{
          width: 100px;
          height: 50px;
          vertical-align: top;
      }
     ul {
         list-style-type: none;
     }
    </style>
</head>

<body>
    <div class="chat">
        
        <div class="top">
            <h1 style="text-align: center">欢迎<%= username%>进入聊天室</h1>
            <ul id="list">
            </ul>
        </div>
        <div class="footer">
            <textarea name="fasong" id="fasong"></textarea>
            <button type="button"  class="search" id="btn">
                发送</button>
        </div>
    </div>
    <script src="/js/jquery-3.2.1.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script type="text/javascript">
        var socket = io();
          $("#btn").click(function () {
            socket.emit("fasong",$("#fasong").val());
            $("#fasong").val("");
          })
            socket.on("yingda",function (msg) { 
                 html = '<li><span>'+ msg + '</span></li>';
                $("#list").prepend($(html));
            })
        
    </script>
</body>

</html>